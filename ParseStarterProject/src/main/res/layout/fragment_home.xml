<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.starter.MainFragments.HomeFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="My Score Is: "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/myScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="10"
        android:textAllCaps="false"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myScoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Suggested Workouts:"
        android:textSize="18sp" />

</RelativeLayout>
